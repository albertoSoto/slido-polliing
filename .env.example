# ==============================================
# Slido Polling - Environment Configuration
# ==============================================

# Server Configuration
# Port for the Express server to listen on
PORT=3000

# Environment mode (development, production, test)
NODE_ENV=development

# Host configuration (useful for Docker)
HOST=0.0.0.0

# ==============================================
# ngrok Configuration (Optional)
# ==============================================
# Sign up at https://ngrok.com to get your auth token
# This enables public access to your polling system
NGROK_AUTHTOKEN=your_ngrok_auth_token_here

# Custom ngrok subdomain (requires paid plan)
# NGROK_SUBDOMAIN=my-polling-app

# ngrok region (us, eu, ap, au, sa, jp, in)
# NGROK_REGION=us

# ==============================================
# Electron Configuration
# ==============================================
# Set to true when running via Electron desktop app
ELECTRON_APP=false

# Electron development tools
ELECTRON_ENABLE_LOGGING=true

# ==============================================
# CORS Configuration
# ==============================================
# Origins allowed for CORS (comma-separated)
# Use * for all origins in development
CORS_ORIGIN=*

# ==============================================
# Security Configuration
# ==============================================
# Session secret for any future authentication
# SESSION_SECRET=your-super-secret-session-key

# Rate limiting (requests per minute per IP)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# Database Configuration (Future)
# ==============================================
# Currently using in-memory storage
# Future database connection string
# DATABASE_URL=postgresql://user:pass@localhost:5432/slidopolling

# ==============================================
# Logging Configuration
# ==============================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# ==============================================
# Performance Configuration
# ==============================================
# Socket.IO configuration
SOCKET_IO_PING_TIMEOUT=60000
SOCKET_IO_PING_INTERVAL=25000

# Maximum number of concurrent polls
MAX_CONCURRENT_POLLS=10

# Poll timeout in milliseconds (auto-close inactive polls)
POLL_TIMEOUT_MS=3600000

# ==============================================
# Development Configuration
# ==============================================
# Auto-reload presentations when files change
WATCH_PRESENTATIONS=true

# Enable development features
ENABLE_DEV_TOOLS=true

# Mock ngrok for development (when ngrok is unavailable)
MOCK_NGROK=false