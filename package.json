{
  "name": "slido-polling",
  "version": "1.0.0",
  "description": "Real-time polling system for Marp presentations",
  "main": "electron-main.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "slides": "marp slides/presentation.md --html --watch --serve",
    "electron": "concurrently \"npm run start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "electron-builder",
    "build-all": "electron-builder --mac --win --linux",
    "pack": "electron-builder --dir"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "cors": "^2.8.5",
    "qrcode": "^1.5.3",
    "ngrok": "^5.0.0-beta.2",
    "marked": "^11.1.1",
    "yaml": "^2.3.4",
    "chart.js": "^4.4.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "@marp-team/marp-cli": "^3.4.0",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.slidopolling.app",
    "productName": "Slido Polling",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "node_modules/express/**/*",
      "node_modules/socket.io/**/*",
      "node_modules/cors/**/*",
      "node_modules/qrcode/**/*",
      "node_modules/ngrok/**/*",
      "node_modules/marked/**/*",
      "node_modules/yaml/**/*",
      "node_modules/chart.js/**/*"
    ],
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity"
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": "nsis"
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": ["polling", "marp", "websocket", "qr-code", "presentation"],
  "author": "",
  "license": "MIT"
}