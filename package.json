{
  "name": "slido-polling",
  "version": "1.0.0",
  "description": "Real-time polling system for Marp presentations",
  "main": "electron-main.js",
  "scripts": {
    "build": "nest build",
    "start": "node dist/main",
    "dev": "nest start --watch",
    "debug": "nest start --debug --watch",
    "slides": "PORT=3001 marp --server --html slides",
    "electron": "pnpm run build && concurrently \"pnpm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:dev": "concurrently \"pnpm dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "pnpm run build && electron-builder",
    "electron:build-all": "pnpm run build && electron-builder --mac --win --linux",
    "electron:pack": "pnpm run build && electron-builder --dir"
  },
  "dependencies": {
    "@marp-team/marp-core": "^4.1.0",
    "@marp-team/marpit": "^3.1.3",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-socket.io": "^10.0.0",
    "@nestjs/serve-static": "^4.0.0",
    "@nestjs/websockets": "^10.0.0",
    "@ngrok/ngrok": "^1.5.2",
    "chart.js": "^4.4.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "hbs": "^4.2.0",
    "marked": "^11.1.1",
    "qrcode": "^1.5.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "socket.io": "^4.7.2",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@marp-team/marp-cli": "^3.4.0",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/node": "^20.3.1",
    "@types/qrcode": "^1.5.2",
    "concurrently": "^8.2.2",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "nodemon": "^3.0.1",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.slidopolling.app",
    "productName": "Slido Polling",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "node_modules/express/**/*",
      "node_modules/socket.io/**/*",
      "node_modules/cors/**/*",
      "node_modules/qrcode/**/*",
      "node_modules/ngrok/**/*",
      "node_modules/marked/**/*",
      "node_modules/yaml/**/*",
      "node_modules/chart.js/**/*"
    ],
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity"
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": "nsis"
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": [
    "polling",
    "marp",
    "websocket",
    "qr-code",
    "presentation"
  ],
  "author": "",
  "license": "MIT"
}